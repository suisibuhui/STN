<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!--分割线-->
    <style name="SplitLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/splitline_grey</item>
    </style>
    <!--头部蓝色一级标题-->
    <style name="TextView_BuleTop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/sy_blue</item>
    </style> <!--头部蓝色一级标题-->

    <!--头部蓝色一级标题-->
    <style name="TextView_BuleTop3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/sy_blue</item>
    </style> <!--头部蓝色一级标题-->


    
    <style name="TextView_BuleTop2">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableLeft">@drawable/shape_gongzuotai</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/sy_blue</item>
    </style>
    <style name="testDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>//无标题
        <item name="android:windowBackground">@null</item>//背景
        <item name="android:windowIsFloating">true</item>//悬浮
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--单选按钮RadioButton-->
    <style name="RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
