<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_login_grey">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试环境"
        android:textSize="50sp"
        android:textColor="@color/sy_red"
        android:gravity="center"
        android:visibility="invisible"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_frame"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/shape_login_button"
        android:textSize="18sp"
        android:textColor="@color/text_white"
        android:text="登    录"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="版权所有 © 甘肃省广播电视网络股份有限公司"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="All right Reserved."/>


    </LinearLayout>

    <LinearLayout
     android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/ll_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_login_inputframe"
        android:layout_below="@+id/iv_logo"
        android:layout_alignParentEnd="true"
        >

        <LinearLayout
            android:id="@+id/ll_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="工号 :"/>

            <EditText
                android:id="@+id/et_number_job"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@color/text_right"
                android:text=""
                android:background="@null"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="密码 :"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                android:textColor="@color/text_right"
                android:text=""
                android:background="@null"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_logo"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_logo"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />


</RelativeLayout>
