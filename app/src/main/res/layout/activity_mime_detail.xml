<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey">

    <!--导航栏-->
    <com.example.stn.stn.views.TopBarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:leftImage="@drawable/ic_back"
        app:titleText="我的"
        />



    <!--我的个人信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_person"/>

        <LinearLayout
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mime_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周星星"
                android:textSize="18sp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录工号:  "
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_login_jobnum"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="    9527"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属组织:  "
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <TextView
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:id="@+id/tv_organizationname"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="    中心营业厅"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="受理营业厅:  "
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <TextView
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:drawableRight="@drawable/up"
                    android:id="@+id/tv_organizationname2"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="中心营业厅"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/rl_password_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@color/text_white">
        <!--分割线-->
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_passwordchangedraw"
            android:layout_width="35dp"
            android:background="@drawable/t112"
            android:layout_height="35dp" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/tv_passwordchangejiantou"
            android:layout_width="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_next"
            android:layout_height="30dp" />
        <TextView
            android:layout_toLeftOf="@+id/tv_passwordchangejiantou"
            android:layout_toRightOf="@+id/tv_passwordchangedraw"
            android:id="@+id/password_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:background="@color/text_white"
            android:text="登录密码修改"
            android:textSize="18sp"
            android:textColor="#46475C" />
        <TextView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
    </RelativeLayout>
    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_grey_01"/>
    <!--客户备忘录-->
    <RelativeLayout
        android:id="@+id/rl_customer_memo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/text_white">
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_passwordchangedraw2"
            android:layout_width="35dp"
            android:background="@drawable/t114"
            android:layout_height="35dp" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/tv_passwordchangejiantou2"
            android:layout_width="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_next"
            android:layout_height="30dp" />
        <TextView
            android:layout_toRightOf="@+id/tv_passwordchangedraw2"
            android:id="@+id/tv_daipaifa"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="我的待派发工单"
            android:textSize="18sp"
            android:textColor="#46475C"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/remember_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_red_bg"
            android:textColor="@color/background_white"
            android:text="3"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_daipaifa"
            />
    </RelativeLayout>

    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_grey_01"/>

    <!--历史公告-->
    <RelativeLayout
        android:id="@+id/rl_history_notice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/text_white">
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_passwordchangedraw3"
            android:layout_width="35dp"
            android:background="@drawable/t113"
            android:layout_height="35dp" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/tv_passwordchangejiantou3"
            android:layout_width="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_next"
            android:layout_height="30dp" />
        <TextView
            android:layout_toRightOf="@+id/tv_passwordchangedraw3"
            android:id="@+id/tv_daihuilong"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="我的待回笼工单"
            android:textSize="18sp"
            android:textColor="#46475C"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/remember_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_red_bg"
            android:textColor="@color/background_white"
            android:text="12"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_daihuilong"/>
    </RelativeLayout>

    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <!--登录密码修改-->


    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F7F7F7"/>





</LinearLayout>