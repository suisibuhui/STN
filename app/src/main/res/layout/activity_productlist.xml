<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:myapp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/background_grey">

    <com.example.stn.stn.views.TopBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="产品订购"
        app:rightText="完成"
        android:id="@+id/tbv_productorder"
        app:leftImage="@drawable/ic_back"/>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <com.example.stn.stn.views.SearchView
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:id="@+id/sv_search"
        myapp:searchedit_imagewidth = "20dp"
        myapp:searchedit_textColor = "@color/text_grey_01"
        myapp:searchedit_textSize = "10sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_edittext_frame"
        />
</LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_left"
        />
    <com.example.stn.stn.views.RefreshableListView

        android:id="@+id/lv_productlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.stn.stn.views.RefreshableListView>


</LinearLayout>
